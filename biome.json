{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "*.{ts,tsx,js,jsx,json}",
      "app/**/*.{ts,tsx,js,jsx,json}",
      "components/**/*.{ts,tsx,js,jsx,json}",
      "lib/**/*.{ts,tsx,js,jsx,json}",
      "hooks/**/*.{ts,tsx,js,jsx,json}",
      "utils/**/*.{ts,tsx,js,jsx,json}",
      "types/**/*.{ts,tsx,js,jsx,json}",
      "constants/**/*.{ts,tsx,js,jsx,json}",
      "!**/.vercel/**",
      "!**/dist/**",
      "!**/public/**",
      "!**/*.config.js",
      "!**/*.config.mjs",
      "!**/.DS_Store",
      "!**/*.log",
      "!**/coverage/**",
      "!**/.nyc_output/**",
      "!**/.cache/**",
      "!tsconfig.json",
      "!package.json",
      "!components.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "domains": {
      "next": "recommended",
      "react": "recommended"
    },
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConsole": "warn"
      },
      "style": {
        "useImportType": "off",
        "useNamingConvention": "off",
        "useConsistentCurlyBraces": "error"
      },
      "correctness": {
        "noUnusedVariables": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  }
}
